{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs", 
    "esModuleInterop": true,                               
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                                                 
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false                              
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}